<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDataLayanan"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#F3D0D7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:backgroundTint="#E195AB">

        <TextView
           android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id layanan"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvCardDataPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView

            android:id="@+id/tvnamalayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="nama layanan"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvharga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="harga"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvnamacabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Cabang"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"/>

        </LinearLayout>


</androidx.cardview.widget.CardView>


