<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvKonvirmasidata_tambahan"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:backgroundTint="@color/CardDasar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:backgroundTint="@color/CardPoni">

            <TextView
                android:id="@+id/idKDtambahan"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="id"
                android:paddingStart="10dp"
                android:gravity="center_vertical" />
        </androidx.cardview.widget.CardView>

        <!-- Baris konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- Nama layanan -->
            <TextView
                android:id="@+id/tvnamatambahanKD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/NamaLayanan"
                android:textColor="@color/black" />

            <!-- Harga layanan -->
            <TextView
                android:id="@+id/tvhargatambahanKD"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="@string/Harga"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
