<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDataPelanggan"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#F3D0D7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:backgroundTint="#E195AB">

        <TextView
           android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/card_pelanggan_id"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvCardDataPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView

            android:id="@+id/tvNama_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/card_pelanggan_nama"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvAlamat_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_alamat"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvNoHp_Pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_nohp"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"/>



        <LinearLayout
            android:id="@+id/lhCardDataPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btpelangganhub"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/card_pelanggan_hubungi"
                android:layout_marginEnd="2dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:backgroundTint="#E195AB"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/btpelangganlihat"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/card_pelanggan_lihat"
                android:backgroundTint="#E195AB"
                android:layout_marginStart="2dp"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>


