<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvDataPelanggan"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:id="@+id/lvCardDataPelanggan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCard_Pelanggan_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pelanggan"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tvNama_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nama Pelanggan"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvAlamat_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvNoHp_Pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Hp"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:id="@+id/lhCardDataPelanggan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="190dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:text="Hubungi"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="190dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Lihat"
                android:layout_marginStart="2dp"/>

        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>


